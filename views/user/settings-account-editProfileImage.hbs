<script>
    // Get reference to the file input and image previews elements
        const form = document.querySelector('.dynamic-form');
        const fileInput = document.getElementById('file-input');
        const imagePreviews = document.getElementById('image-previews');
        const userImageError = document.getElementById('userImageError');

        // Event listener for when a file is selected
        fileInput.addEventListener('change', function() {
            // Clear existing previews
            imagePreviews.innerHTML = '';

            // Display image previews
            for (let i = 0; i < fileInput.files.length; i++) {
                const file = fileInput.files[i];
                const reader = new FileReader();

                reader.onload = function(event) {
                    const imgElement = document.createElement('img');
                    imgElement.src = event.target.result;
                    imgElement.className = 'preview-img';
                    imagePreviews.appendChild(imgElement);
                };

                reader.readAsDataURL(file);
            }
        });

        // Event listener for form submission
        form.addEventListener('submit', function(event) {
            // Clear existing error messages
            userImageError.textContent = '';

            // Get the selected file
            const file = fileInput.files[0]; // Assuming only one file is selected

            // Validate image file type
            if (file) {
                const validImageTypes = ['image/jpeg', 'image/png', 'image/gif'];
                if (!validImageTypes.includes(file.type)) {
                    userImageError.textContent = 'Invalid file type. Please select a JPEG, PNG, or GIF file.';
                    event.preventDefault(); // Prevent form submission if the file type is invalid
                }
            } else {
                userImageError.textContent = 'Please select an image file.';
                event.preventDefault(); // Prevent form submission if no file is selected
            }
        });
