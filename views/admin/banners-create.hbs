<script>
    const fileInput = document.getElementById('file-input');
const imagePreview = document.getElementById('image-preview');

fileInput.addEventListener('change', function () {
    const file = this.files[0];
    if (file) {
        const reader = new FileReader();
        reader.onload = function (event) {
            imagePreview.src = event.target.result;
        };
        reader.readAsDataURL(file);
    } else {
        imagePreview.src = '../assets/imgs/theme/upload.svg'; // Default image if no file selected
    }
});
</script>

<script>
    const bannerForm = document.getElementById('bannerForm');
    const fileInput = document.getElementById('file-input');
    const bannerImageError = document.getElementById('bannerImageError');

    bannerForm.addEventListener('submit', function (event) {
        const file = fileInput.files[0];
        const validExtensions = ['jpg', 'jpeg', 'png', 'gif']; // Accepted file extensions

        if (!file) {
            bannerImageError.textContent = 'Please upload an image.';
            event.preventDefault();
        } else {
            const fileExtension = file.name.split('.').pop().toLowerCase();

            if (!validExtensions.includes(fileExtension)) {
                bannerImageError.textContent = 'Invalid file format. Accepted formats: JPG, JPEG, PNG, GIF.';
                event.preventDefault();
            } else {
                bannerImageError.textContent = '';
            }
        }
    });
</script>


