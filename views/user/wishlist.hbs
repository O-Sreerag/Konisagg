    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-nav ms-auto">
                <ul class="nav">
                    <li class="dropdown nav-item">
                        <a class="dropdown-toggle" data-bs-toggle="dropdown" href="#" id="dropdownAccount" aria-expanded="false"> <img class="img-xs rounded-circle" src="../admin/assets/imgs/people/avatar2.jpg" alt="User"></a>
                        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownAccount">
                            <a class="dropdown-item text-danger" href="../logout"><i class="material-icons md-exit_to_app"></i>Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>

        <section class="content-main">
                    <br><br>
            <div class="content-header">
                <h2 class="content-title">Your Wishlist</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row gx-5">
                        <div class="col-lg-12">
                            <section class="content-body p-xl-4">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="table-responsive">
                                                {{#if wishlistItems}}
                                                <table class="table shopping-summery text-center">
                                                    <thead>
                                                        <tr class="main-heading">
                                                            <th scope="col" width="40%" colspan="2">Product</th>
                                                            <th scope="col" width="15">Price</th>
                                                            <th scope="col" width="15">Stock Status</th>
                                                            <th scope="col" width="15">Action</th>
                                                            <th scope="col" width="15">Remove</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each wishlistItems}}
                                                        <tr>
                                                            {{!-- <td class="image product-thumbnail"><img src="../multer/products/cropped-{{productimages.[0]}}" alt="#"></td> --}}
                                                            <td class="image product-thumbnail"><img src="{{productimages.[0]}}" alt="#"></td>
                                                            <td class="product-des product-name">
                                                                <h5 class="product-name"><a href="shop-product-right.html">{{productname}}</a></h5>
                                                                <p class="font-xs">{{productdescription}}
                                                                </p>
                                                            </td>
                                                            {{#if promotionalprice}}
                                                            <td class="price" data-title="Price"><span>₹{{promotionalprice}}</span></td>
                                                            {{else}}
                                                            <td class="price" data-title="Price"><span>₹{{regularprice}}</span></td>
                                                            {{/if}}
                                                            <td class="text-center" data-title="Stock">
                                                                <span class="color3 font-weight-bold">in stock</span>
                                                            </td>
                                                            <td class="text-right" data-title="Cart">
                                                                {{#if (eq status true)}}
                                                                <a href="/shop/product/details?productid={{_id}}">
                                                                    <button class="btn btn-sm">
                                                                        Details
                                                                    </button>
                                                                </a>
                                                                {{else}} 
                                                                <p class="text-danger">this item is unavailable</p>
                                                                {{/if}}
                                                            </td>
                                                            <td class="action" data-title="Remove"><a href="/wishlist/delete/{{_id}}"><i class="fi-rs-trash"></i></a></td>
                                                        </tr>
                                                        {{/each}}
                                                    </tbody>
                                                </table>
                                                {{else}}
                                                <div class="card-body">
                                                    <p style="color: red;">there are no wishlist items added  yet</p>
                                                </div>
                                                {{/if}}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section> 
                        </div>
                    </div> 
                </div> <!-- card body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
