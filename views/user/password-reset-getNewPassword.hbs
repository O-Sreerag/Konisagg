    <script>
        function inputSanitizer() {

        const password = document.getElementById("userpassword").value;
        const conformpassword = document.getElementById("userpasswordc").value;

        let errorMessage

        // Validate password requirements
        const passwordRegex = /^(?=.*[0-9])(?=.*[A-Za-z])(?=.*[@#$%^&+=]).{8,}$/;
        if (!password.match(passwordRegex)) {
            errorMessage ="Password should be at least 8 characters with at least 1 number, 1 alphabet, and 1 special character."
            document.getElementById("error").innerHTML = errorMessage
            return false;
        }

        // Validate conform password
        if (password !== conformpassword) {
            errorMessage ="Passwords do not match."
            document.getElementById("error").innerHTML = errorMessage
            return false;
        }

        // All conditions passed, return true
        return true;

    }
    
    </script>
