        <section class="content-main">
            <div class="container">

                
                {{!-- Cart table --}}
                <div class="content-header">
                    <h2 class="content-title">Your Cart</h2>
                </div>
                {{#if cartItems}}
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center clean">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" width="12%">Index</th>
                                    <th scope="col" width="12%">Image</th>
                                    <th scope="col" width="12%">Name</th>
                                    <th scope="col" width="12%">Spec</th>
                                    <th scope="col" width="12%">Price</th>
                                    <th scope="col" width="12%">Quantity</th>
                                    <th scope="col" width="12%">Subtotal</th>
                                    <th scope="col" width="12%">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each cartItems}}
                                <tr>
                                    <td>{{@index}}</td>
                                    <td class="image product-thumbnail"><img src="../multer/products/cropped-{{product.productimages.[0]}}" alt="#"></td>
                                    <td class="product-des product-name">
                                        <h5 class="product-name"><a href="shop-product-right.html">{{product.productname}}</a></h5>
                                        </p>
                                    </td>
                                    <td class="Spec" data-title="Spec"> <div>color: {{color}}</div>  <div>size: {{size}}</div></td>
                                    {{#if product.promotionalprice}}
                                    <td class="price" data-title="Price"><span>₹{{product.promotionalprice}}</span></td>
                                    <td class="text-center" data-title="Stock">
                                        {{#if (eq product.status true)}}
                                            <div class="detail-qty border radius  m-auto">
                                                <div onclick="handleQuantity(1, '{{ItemId}}', '{{product.promotionalprice}}', '{{product.stock}}')" id="increment-quantity" class="qty-up" style="cursor: pointer;">
                                                    <i class="fi-rs-angle-small-up"></i>
                                                </div>
                                                <span class="qty-val" id="quantityElement{{ItemId}}">{{quantity}}</span>
                                                <div onclick="handleQuantity(-1, '{{ItemId}}' , '{{product.promotionalprice}}', '{{product.stock}}')" id="decrement-quantity" class="qty-down" style="cursor: pointer;">
                                                    <i class="fi-rs-angle-small-down"></i>
                                                </div>
                                            </div>
                                        {{else}}
                                            <p class="text-danger">This item is no longer available</p>
                                        {{/if}}
                                    </td>
                                    {{else}}
                                    <td class="price" data-title="Price"><span>{{product.selected_Currency}}{{product.regularprice}}</span></td>
                                    <td class="text-center" data-title="Stock">
                                        {{#if (eq product.status true)}}
                                            <div class="detail-qty border radius  m-auto">
                                                <div onclick="handleQuantity(1, '{{ItemId}}', '{{product.regularprice}}' , '{{product.stock}}')" id="increment-quantity" class="qty-up" style="cursor: pointer;">
                                                    <i class="fi-rs-angle-small-up"></i>
                                                </div>
                                                <span class="qty-val" id="quantityElement{{ItemId}}">{{quantity}}</span>
                                                <div onclick="handleQuantity(-1, '{{ItemId}}' , '{{product.regularprice}}' , '{{product.stock}}')" id="decrement-quantity" class="qty-down" style="cursor: pointer;">
                                                    <i class="fi-rs-angle-small-down"></i>
                                                </div>
                                            </div>
                                        {{else}}
                                            <p class="text-danger">This item is no longer available</p>
                                        {{/if}}
                                    </td>
                                    {{/if}}
                                    <td class="text-right" data-title="Cart">
                                        {{#if (eq present false)}}
                                            <p class="text-danger outOfStock" id="outOfStock{{ItemId}}" style="display: block;">Out of stock</p>
                                        {{else}}
                                            <p class="text-danger outOfStock" id="outOfStock{{ItemId}}" style="display: none;">Out of stock</p>
                                        {{/if}}
                                        <span><div  id="subtotal{{ItemId}}">{{price}}</div></span>
                                    </td>
                                    <td class="action" data-title="Remove"><a href="/cart/delete?itemId={{product._id}}&color={{color}}&size={{size}}" class="text-muted"><i class="fi-rs-trash"></i></a></td>
                                </tr>
                                {{/each}}
                                <tr>
                                    <td colspan="12" class="text-end">
                                        <a href="/cart/delete/all" class="text-muted"> <i class="fi-rs-cross-small"></i> Clear Cart</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="cart-action text-end">
                        <a class="btn" href="/shop"><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                    </div>
                </div>
                {{!-- table end --}}

                {{!-- Cart total --}}
