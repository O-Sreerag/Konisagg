            border: 2px solid black;
            border-radius: 5px; 
            text-align: center;
            line-height: 26px;
            cursor: pointer;
        }

        .size-checkbox input[type="checkbox"]:checked + label {
            background-color: black;
            color:#ccc
        }

        .size-checkbox-default input[type="checkbox"] + label {
            background-color: black;
            color: #ccc;
        }

