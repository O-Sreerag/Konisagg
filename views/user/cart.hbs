    <script>

  document.addEventListener("DOMContentLoaded", function () {
    console.log("proceed to checkout validation")
    const outOfStockElements = document.querySelectorAll('.outOfStock')
    console.log(outOfStockElements)

    let flag = true

    outOfStockElements.forEach(element => {
        if (element.style.display === 'block') {
            // Perform your action here when an element is displayed
            console.log(`Element ${element.id} is displayed as Out of stock`)
            flag = false

            const proceedToCheckout1 = document.getElementById('proceedToCheckout1');
            const proceedToCheckout2 = document.getElementById('proceedToCheckout2');
            proceedToCheckout1.style.display = 'none';
            proceedToCheckout2.style.display = 'block';
        }
    });

    if(flag == true) {
        const proceedToCheckout2 = document.getElementById('proceedToCheckout2');
        const proceedToCheckout1 = document.getElementById('proceedToCheckout1');
        proceedToCheckout1.style.display = 'block'
        proceedToCheckout2.style.display = 'none';
    } 
  });

    function handleQuantity(increment, ItemId, price, stock) {
        console.log(increment, ItemId, price, stock)

        const quantityElementId = `quantityElement${ItemId}`;
        const quantityElement = document.getElementById(quantityElementId);
        const currentQuantity = parseInt(quantityElement.textContent, 10);
        const newQuantity = currentQuantity + increment;

        const outOfStockElementId = `outOfStock${ItemId}`;
        const outOfStock = document.getElementById(outOfStockElementId)

        // Check if newQuantity is within the stock limits
        if (newQuantity < 1) {
            // Quantity cannot be less than 1
            console.log(newQuantity)
            console.log('Cannot set quantity less than 1');
            return;
        } else if (newQuantity > stock) {
            // Quantity exceeds available stock
            console.log(newQuantity)
            console.log('Out of stock');
            outOfStock.textContent = "Out of stock"
            document.getElementById(outOfStockElementId).style.display = 'block'
        } else {
            document.getElementById(outOfStockElementId).style.display = 'none'
        }

        quantityElement.textContent = newQuantity;

        const subtotalElementId = `subtotal${ItemId}`;
        const subtotalElement = document.getElementById(subtotalElementId);
        const currentSubtotal = parseFloat(subtotalElement.textContent);
        let newSubtotal = newQuantity * price
        subtotalElement.textContent = newSubtotal.toFixed(2);
        
        const totalElement = document.getElementById("totalPrice"); 
        const totalPrice = parseFloat(totalElement.textContent);
        const newTotalPrice = totalPrice - currentSubtotal + newSubtotal;
        totalElement.textContent = newTotalPrice.toFixed(2);

        console.log("proceed to checkout validation")
        const outOfStockElements = document.querySelectorAll('.outOfStock')
        console.log(outOfStockElements)

        let flag = true

        outOfStockElements.forEach(element => {
            if (element.style.display === 'block') {
                // Perform your action here when an element is displayed
                console.log(`Element ${element.id} is displayed as Out of stock`)
                flag = false

                const proceedToCheckout1 = document.getElementById('proceedToCheckout1');
                const proceedToCheckout2 = document.getElementById('proceedToCheckout2');
                proceedToCheckout1.style.display = 'none';
                proceedToCheckout2.style.display = 'block';
            }
        });

        if(flag == true) {
            const proceedToCheckout2 = document.getElementById('proceedToCheckout2');
            const proceedToCheckout1 = document.getElementById('proceedToCheckout1');
            proceedToCheckout1.style.display = 'block'
            proceedToCheckout2.style.display = 'none';
        } 

        fetch(`/cart/update-quantity?increment=${increment}&ItemId=${ItemId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({})
        })
        .then(response => {
            if (response.ok) {
                // Handle the response from the server
            } else {
                // Handle errors
            }
        })
        .catch(error => {
            console.error('API request failed:', error);
        });
    }

    </script>

