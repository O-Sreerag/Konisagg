            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row gx-5">
                        <aside class="col-lg-3 border-end">
                            <nav class="nav nav-pills flex-lg-column mb-4">
                                <br>
                                <a class="nav-link active" aria-current="page">View Coupens</a>
                                <a class="nav-link" href="/admin/coupens/create">Create Coupen</a>
                            </nav>
                        </aside>
                        <div class="col-lg-9">
                            <section class="content-body p-xl-4">
                                {{#if coupens}}
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Code</th>
                                            <th>Type</th>
                                            <th>Discount</th>
                                            <th>Min Purchase</th>
                                            <th>Used Users</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each coupens}}
                                        <tr>
                                            <td>{{this.code}}</td>
                                            <td>{{this.type}}</td>
                                            <td>{{this.discount}}</td>
                                            <td>{{this.minPurchaseAmount}}</td>
                                            <td>
                                                <button class="btn btn-sm btn-info" onclick="toggleUsers('{{this._id}}')">Used Users</button>
                                                <div id="users_{{this._id}}" style="display: none;">
                                                    <ul>
                                                        {{#each this.usedBy}}
                                                        <li>{{this}}</li>
                                                        {{/each}}
                                                    </ul>
                                                </div>
                                            </td>
                                            <td>
                                                {{#if (eq this.status "active")}}
                                                <a href="../admin/coupens/changeStatus?coupenid={{this._id}}" class="btn btn-danger btn-sm">Disable</a>
                                                {{else}}
                                                <a href="../admin/coupens/changeStatus?coupenid={{this._id}}" class="btn btn-success btn-sm">Able</a>
                                                {{/if}}
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                                {{else}}
                                <p style="color: red;">no coupens added</p>
                                {{/if}}
