<body>
    <main>
        <section class="content-main mt-80 mb-80">
            <div class="card mx-auto card-login">
                <div class="card-body">
                    <h4 class="card-title mb-4">Admin Sign in</h4>
                    <form id="loginForm" action="/admin/loginSubmit" method="POST">
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input class="form-control" name="adminemail" id="adminemail" placeholder="Email" type="text">
                            <div id="emailError" class="text-danger"></div> <!-- Error message container for email -->
                        </div> <!-- form-group// -->
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input class="form-control" name="adminpassword" id="adminpassword" placeholder="Password" type="password">
                            <div id="passwordError" class="text-danger"></div> <!-- Error message container for password -->
                        </div> <!-- form-group// -->
                        <div><p id="error">{{error}}</p></div>
                        <div class="mb-4">
                            <button type="submit" class="btn btn-primary w-100" onclick="validateLoginForm(event)"> Login </button>
                        </div> <!-- form-group// -->
                    </form>
                </div>
            </div>
