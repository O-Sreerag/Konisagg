            margin: 5px;
            cursor: pointer;
            position: relative;
        }

        .color-circle-default {
            width: 25px;
            height: 25px;
            border-radius: 50%;
            display: inline-block;
            margin: 5px;
            cursor: pointer;
            position: relative;
        }

        .dot {
            position: absolute;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: #efe6e6; 
            top: 0;
            right: 0;
            display: none;
        }

        .selected .dot {
