                    <span></span> {{productDetails.productname}}
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="product-detail accordion-detail">
                            <div class="row mb-50">
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-gallery">
                                        <span class="zoom-icon"><i class="fi-rs-search"></i></span>
                                        <!-- MAIN SLIDES -->
                                        <div class="product-image-slider">
                                            <figure class="border-radius-10">
                                                <img src="/multer/products/cropped-{{productDetails.productimages.[0]}}" alt="product image" width="100%" height="100%">
                                            </figure>
                                        </div>
                                        <!-- THUMBNAILS -->
                                        <div class="slider-nav-thumbnails pl-15 pr-15">
                                            {{#each productDetails.productimages}}
                                                <div><img src="/multer/products/cropped-{{this}}" alt="product image"></div>
                                            {{/each}}
                                        </div>
                                    </div>
                                </div>
                            
                            {{!-- product details --}}
                                <div class="col-md-6 col-sm-12 col-xs-12">
                                    <div class="detail-info">
                                        <h2 class="title-detail">{{productDetails.productname}}</h2>
                                        {{!-- <div class="product-detail-rating">
                                            <div class="product-rate-cover text-end">
                                                <div class="product-rate d-inline-block">
                                                    <div class="product-rating" style="width:90%">
                                                    </div>
                                                </div>
                                                <span class="font-small ml-5 text-muted"> (25 reviews)</span>
                                            </div>
                                        </div> --}}
                                        <div class="clearfix product-price-cover">
                                            <div class="product-price primary-color float-left">
                                                {{#if productDetails.promotionalprice}}
                                                <ins><span class="text-brand">₹{{productDetails.promotionalprice}}</span></ins>
                                                <ins><span class="old-price font-md ml-15">₹{{productDetails.regularprice}}</span></ins>
                                                {{else}} 
                                                <ins><span class="text-brand">₹{{productDetails.regularprice}}</span></ins>
                                                {{/if}}
                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-15 mb-15"></div>
                                        <div class="short-desc mb-30">
                                            <p>{{productDetails.productdescription}}</p>
                                        </div>
                                        <div class="product_sort_info font-xs mb-30">
                                            <ul>
                                                <li class="mb-10"><i class="fi-rs-crown mr-5"></i>{{productDetails.warrentyperiod.selected_period}} {{productDetails.warrentyperiod.selected_unit}} Warranty</li>
                                                <li class="mb-10"><i class="fi-rs-refresh mr-5"></i>{{productDetails.returnperiod.selected_period}} {{productDetails.returnperiod.selected_unit}} Return Policy</li>
                                                {{#if productDetails.paymentmethods.[1]}}
                                                <li><i class="fi-rs-credit-card mr-5"></i> Cash on Delivery available</li>
                                                {{/if}}
                                            </ul>
                                        </div>

                                        {{!-- form submit --}}
                                        <form action="/cart/add/?cartItemId={{productDetails._id}}" method="post">
                                        <div class="row">
                                            <div class="col-2">
                                                <label for="selected_color" class="mr-2">Colors:</label>
                                            </div>
                                            <div class="col-4">
                                                <select id="selected_color" name="colors" class="form-control">
                                                    {{#each productDetails.colors}}
                                                    <option value="{{this}}" style="color: {{this}};">{{this}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="row mt-2">
                                            <div class="col-2">
                                                <label for="selected_size" class="mr-2">Sizes:</label>
                                            </div>
                                            <div class="col-4">
                                                <select id="selected_size" name="sizes" class="form-control">
                                                    {{#each productDetails.sizes}}
                                                    <option value="{{this}}">{{this}}</option>
                                                    {{/each}}
                                                </select>
                                            </div>
                                        </div>
                                        <div class="bt-1 border-color-1 mt-30 mb-30"></div>
                                        <div class="detail-extralink">
                                            <div class="product-extra-link2">
                                                {{#if (eq productDetails.stock 0)}}
                                                <span class="text-danger">Out of stock</span>
                                                {{else}}
                                                <button type="submit" class="button button-add-to-cart">Add to cart</button>
                                                {{/if}}
                                                <a aria-label="Add To Wishlist" class="action-btn hover-up" href="/wishlist/add/?wishlistItemId={{productDetails._id}}"><i class="fi-rs-heart"></i></a>
                                            </div>
                                        </div>
                                        </form>
                                        {{!-- form end --}}

                                        <ul class="product-meta font-xs color-grey mt-50">
                                            <li class="mb-5">Tags:{{#each productDetails.tags}} <a href="#" rel="tag">{{this}}</a>{{/each}}
                                            {{#if (eq productDetails.status true)}}
                                                <li>Availability:<span class="in-stock text-success ml-5">{{productDetails.stock}} Items In Stock</span></li>
                                            {{else}}
                                                <li>Availability:<span class="in-stock text-danger ml-5">Out of stock</span></li>
                                            {{/if}}
                                        </ul>
                                    </div>
                                    <!-- Detail Info -->
                                </div>
                            </div>
                            {{!-- end of product details --}}


                            
                        </div>
                    </div>
                </div>
            </div>
        </section>
