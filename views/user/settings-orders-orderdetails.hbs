            <div class="content-header">
                <h2 class="content-title">Orders Mangement</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                    <aside class="col-lg-3 border-end">
                        <nav class="nav nav-pills flex-lg-column mb-4">
                            <br><br>
                            <a class="nav-link active" aria-current="page">Order History</a>
                            <a class="nav-link" href="/orders/track">Track Orders</a>
                            <a class="nav-link" href="/orders/address">Billing Address</a> 
                        </nav>
                    </aside>
                    <div class="col-lg-9">
                        <section class="content-body p-xl-4">
                            <div class="content-header">
                                <div>
                                    <h2 class="content-title card-title">Order detail</h2>
                                    <p>Details for Order ID: {{order._id}}</p>
                                </div>
                            </div>
                            <div class="card">
                                <header class="card-header">
                                    <div class="row align-items-center">
                                        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
                                            <span>
                                                <i class="material-icons md-calendar_today"></i> <b>{{order.updatedAt}}</b>
                                            </span> <br>
                                            <small class="text-muted">Order ID: {{order._id}}</small>
                                        </div>
                                        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
                                            {{#if statusPending}}
                                                <a class="btn btn-danger" href="/order/cancel?orderId={{order._id}}">Cancel</a>
                                            {{/if}}
                                            {{#if statusDelivered}}
                                                <a class="btn btn-danger" href="/order/return?orderId={{order._id}}">Return</a>
                                            {{/if}}
                                            {{#if statusCancelReq}}
                                                <p style="color: rgb(225, 255, 0)">Cancel Requested</p>
                                            {{/if}}
                                            {{#if statusCancelled}}
                                                <p style="color: red">Order cancelled</p>
                                            {{/if}}
                                            {{#if statusRR}}
                                                <p style="color: rgb(225, 255, 0)">Return requested</p>
                                            {{/if}}
                                            {{#if statusRA}}
                                                <p style="color: red">Return accepted</p>
                                            {{/if}}
                                            <a class="btn btn-secondary print ms-2" href="#"><i class="icon material-icons md-print"></i></a>
                                        </div>
                                    </div>
                                </header> <!-- card-header end// -->
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <thead>
                                                        <tr>
                                                            <th width="40%">Product</th>
                                                            <th width="20%">Unit Price</th>
                                                            <th width="20%">Quantity</th>
                                                            <th width="20%" class="text-end">Total</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        {{#each order.products}}
                                                        <tr>
                                                            <td>
                                                                <a class="itemside" href="#">
                                                                    <div class="left">
                                                                        <img src="/multer/products/{{product.productimages.[0]}}" width="40" height="40" class="img-xs" alt="Item">
                                                                    </div>
                                                                    <div class="info"> {{product.productname}} </div>
                                                                </a>
                                                            </td>
                                                            <td> ${{product.promotionalprice}} </td>
                                                            <td> {{quantity}} </td>
                                                            <td class="text-end"> ${{price}} </td>
                                                        </tr>
                                                        {{/each}}
                                                        <tr>
                                                            <td colspan="4">
                                                                <article class="float-end">
                                                                    <dl class="dlist">
                                                                        <dt>Grand total:</dt>
                                                                        <dd> <b class="h5">${{order.total}}</b> </dd>
                                                                    </dl>
                                                                    <dl class="dlist">
                                                                        <dt class="text-muted">Status:</dt>
                                                                        <dd>
                                                                            <span class="badge rounded-pill alert-success text-success">{{order.paymentStatus}}</span>
                                                                        </dd>
                                                                    </dl>
                                                                </article>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div> 
                                        </div> 
                                    </div>
                                         <div class="col-md-12">
                                            <article class="icontext align-items-start">
                                                <span class="icon icon-sm rounded-circle bg-primary-light">
                                                    <i class="text-primary material-icons md-place"></i>
                                                </span>
                                                <div class="text">
                                                    <h6 class="mb-1">Deliver to</h6>
                                                    <p class="mb-1">
                                                        State: {{order.userAddress.state}}, District: {{order.userAddress.district}}, City: {{order.userAddress.city}}, {{order.userAddress.house}}, Po Box: {{order.userAddress.pin}}
                                                    </p>
                                                </div>
                                            </article>
                                        </div> <!-- col// -->
                                </div> 
                            </div> 
                        </section>

                    </div>
                </div> 
