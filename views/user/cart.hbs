                                        <a href="/checkout"><button class="btn" type="submit"><i class="fi-rs-box-alt mr-10"></i>Proceed To CheckOut</button></a>      
                                    </div>
                                {{else}}
                                    <a href="/checkout"><button class="btn" type="submit"><i class="fi-rs-box-alt mr-10"></i>Proceed To CheckOut</button></a>      
                                {{/if}}
