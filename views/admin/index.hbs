<script>
    function showReportOptions() {
        Swal.fire({
            title: 'Generate Sales Report',
            html:
            '<label for="start-date">Start Date:</label>' +
            '<input type="date" id="start-date" required><br>' +
            '<label for="end-date">End Date:</label>' +
            '<input type="date" id="end-date" required><br>' +
            '<label for="report-type">Select Report Type:</label>' +
            '<select id="report-type">' +
            '<option value="pdf">PDF</option>' +
            '<option value="excel">Excel</option>' +
            '</select>',
            showCancelButton: true,
            confirmButtonText: 'Generate',
            preConfirm: () => {
            const startDate = document.getElementById('start-date').value;
            const endDate = document.getElementById('end-date').value;
            const reportType = document.getElementById('report-type').value;

            if (!startDate || !endDate) {
                Swal.showValidationMessage('Please enter both start and end dates');
            }else if (startDate > endDate) {
                return Swal.showValidationMessage('Start date should be earlier than the end date');
            } else {
                generateReport(startDate, endDate, reportType);
            }
            }
        });
    }

    function generateReport(startDate, endDate, reportType) {
    console.log('Start Date:', startDate);
    console.log('End Date:', endDate);
    console.log('Report Type:', reportType);

    fetch('/admin/generateReport', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ startDate, endDate, reportType })
        })
        .then(response => response.blob())
        .then(blob => {
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            if(reportType == "pdf") {
                a.download = `report.pdf`;
            } else {
                a.download = `report.xlsx`;
            }
            document.body.appendChild(a);
            a.click();
            window.URL.revokeObjectURL(url);
        })
        .catch(error => console.error('Error:', error));
    }

</script>

