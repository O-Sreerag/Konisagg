    <script>
        function sendData(e) {
  const tableBody = document.querySelector('tbody');
  fetch('/admin/users/search', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ payload: e.value })
  })
  .then(res => res.json())
  .then(data => {
    let payload = data.payload;
    console.log(payload);

    tableBody.innerHTML = '';
    if (!payload || payload.length === 0) {
      // Handle empty or no search results
      tableBody.innerHTML = '<tr><td colspan="5">Sorry. Nothing Found.</td></tr>';
      return;
    }
    
    payload.forEach(user => {
      const userHTML = `
        <tr>
          <td width="40%">
            ${user.userimage ? `<div class="left"><img src="../multer/users/${user.userimage}" class="img-sm img-avatar" alt="Userpic"></div>` : `<div class="left"><img src="../images/user-icon-2.png" class="img-sm img-avatar" alt="Default Userpic"></div>`}
            <div class="info pl-3">
              <h6 class="mb-0 title">${user.username}</h6>
              <small class="text-muted">User ID: ${user._id}</small>
            </div>
          </td>
          <td width="15%">${user.createdAt.slice(0, 10)}</td>
          <td width="15%">${user.useremail}</td>
          <td width="15%">${user.status ? '<span class="badge rounded-pill alert-success">Active</span>' : '<span class="badge rounded-pill alert-danger">Blocked</span>'}</td>
          <td width="15%">
            ${user.status ? `<a href="../admin/userBlock?userid=${user._id}" class="btn btn-sm btn-danger rounded font-sm mt-15">Block</a>` : `<a href="../admin/userUnblock?userid=${user._id}" class="btn btn-sm btn-success rounded font-sm mt-15" style="color: white !important;">Unblock</a>`}
          </td>
        </tr>
      `;
      tableBody.insertAdjacentHTML('beforeend', userHTML);
    });
  })
  .catch(error => {
    console.error('Error fetching data:', error);
    tableBody.innerHTML = '<tr><td colspan="5">Error fetching data.</td></tr>';
  });
}


    </script>
