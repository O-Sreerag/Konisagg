    <script>
    function toggleUsers(couponId) {
        const usersDiv = document.getElementById(`users_${couponId}`);
        if (usersDiv.style.display === 'none') {
            usersDiv.style.display = 'block';
        } else {
            usersDiv.style.display = 'none';
        }
    }
    </script>
