                </ul>
            </div>
        </header>
        <section class="content-main">
            <br><br>
            <div class="content-header">
                <h2 class="content-title">Orders Mangement</h2>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                    <div class="col-lg-12">
                        <section class="content-body p-xl-4">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        {{#if orders}}
                                        <thead>
                                            <tr>
                                                <th>#ID</th>
                                                <th scope="col">Total</th>
                                                <th scope="col">Date</th>
                                                <th scope="col">Status</th>
                                                <th scope="col"> Action </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each orders}}
                                            <tr>
                                                <td width="40%">{{orderId}}</td>
                                                {{#if totalWithDiscount}}
                                                <td width="15%">₹{{totalWithDiscount}}</td>
                                                {{else}}
                                                <td width="15%">₹{{total}}</td>
                                                {{/if}}
                                                <td width="15%">
                                                <script>
                                                    var updatedAt = "{{updatedAt}}"; // Assuming updatedAt is a string
                                                    var slicedValue = updatedAt.slice(0, 10);
                                                    document.write(slicedValue); // Output the sliced value
                                                </script>
                                                </td>
                                                <td width="15%"><span class="badge rounded-pill alert-warning">{{Status}}</span></td>
                                                <td width="15%">
                                                    <div class="dropdown">
                                                        <a href="/order/details?orderId={{_id}}" class="btn btn-md rounded font-sm">details</i> </a>
                                                        <div class="dropdown-menu">
                                                            <a class="dropdown-item" href="/order/details?orderId={{_id}}">View detail</a>
                                                            <a class="dropdown-item" href="#">Edit info</a>
                                                            <a class="dropdown-item text-danger" href="#">Delete</a>
                                                        </div>
                                                    </div> <!-- dropdown //end -->
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                        {{else}}
                                        <div class="card-body">
                                            <p style="color: red;">there are no orders yet</p>
                                        </div>
                                        {{/if}}
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                    </div>
                </div> 
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->
